<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="btnsmall">
	    <item name="android:background">@drawable/smallbutton</item>
	    <item name="android:textColor">#D7FAFA</item>
	</style>
	<style name="btnorange">
	    <item name="android:background">@drawable/orangebutton</item>
	    <item name="android:textColor">#D7FAFA</item>
	</style>
	<style name="textsmall">
	    <item name="android:textColor">#0CC5DD</item>
	</style>
	<style name="textheader">
	    <item name="android:textColor">#2F2F48</item>
	    <item name="android:textStyle">bold</item>
	</style>
	<style name="txtblue">
	    <item name="android:background">@drawable/textbluegradient</item>
	    <item name="android:textSize">28sp</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:textDirection">rtl</item>
	</style>
</resources>